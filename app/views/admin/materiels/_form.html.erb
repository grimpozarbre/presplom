<%= form_for([:admin,@materiel]) do |f| %>
<p>
	<%= f.label "Nom :" %>
	<%= f.text_field :nom %>
</p>
<p>
	<%= f.label "Description :" %>
	<%= f.text_area :description %>
</p>
<p>
	<%= f.label "Type :" %>
	<%= f.text_field :type_materiel %>
</p>

<p>
	<%= f.label "Par défaut :" %>
	<%= f.check_box :defaut %>
</p>

<p>
	<%= f.submit "Créer le matériel" %>
</p>
<%end%>
