<h1>Utilisateurs:</h1>

<table>
  <tr>
    <th>id</th>
    <th>Username</th>
    <th>Nom</th>
    <th>Prénom</th>
    <th>e-Mail</th>
    <th>Département</th>
  </tr>
<% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.uid %></td>
    <td><%= user.nom %></td>
    <td><%= user.prenom %></td>
    <td><%= user.email %></td>
    <td><%= user.departement %></td>
   
    <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
    <td><%= link_to 'Delete', admin_user_path(user), :method => 'delete', :confirm => 'Etes vous sûr ?' %></td>
  </tr>
<% end %>
</table>
 <br /> <%= link_to 'Ajouter un utilisateur', new_admin_user_path %>

 
