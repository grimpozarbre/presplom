<%= form_for([:admin,@user]) do |f| %>
<p>
	<%= f.label :username, "Username :" %>
	<%= f.text_field :uid %>
</p>
<p>
	<%= f.label :nom, "Nom :" %>
	<%= f.text_field :nom %>
</p>
<p>
	<%= f.label :prenom, "Prénom :" %>
	<%= f.text_field :prenom %>
</p>
<p>
	<%= f.label :email, "Email :" %>
	<%= f.text_field :email %>
</p>
<p>
	<%= f.label :departement, "Département :" %>
	<%= f.select :departement, options_for_select(%w[TIC TIN EC+G HEG FEE Comem+]) %>
</p>

<p>
	<%= f.label :roles, "Rôles :" %>
	<%= f.collection_select(:role_ids, Role.all, :id, :name) %>
</p>

<p>
	<%= f.submit "Créer l\'utilisateur" %>
</p>
<%end%>
